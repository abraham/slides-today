{
  "name": "slides-today",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "14",
    "npm": "7"
  },
  "scripts": {
    "analyze": "npm run build:stats && webpack-bundle-analyzer dist/slides-today/stats-es2015.json",
    "build": "ng build --prod",
    "build:development": "npm run build --prod='false'",
    "build:scripts": "cd scripts && tsc",
    "build:stats": "npm run build --stats-json",
    "bundlesize": "bundlesize --enable-github-checks",
    "clean": "rm -rf dist && rm -rf scripts/dist",
    "deploy": "ng deploy",
    "e2e": "ng e2e",
    "fix": "concurrently npm:fix:*",
    "fix:ng": "ng lint --fix",
    "fix:prettier": "prettier --write \"**/*.{js,json,css,scss,less,md,ts,html,component.html}\"",
    "get-tweet": "ts-node --project scripts/tsconfig.json scripts/get-tweet.ts",
    "id": "ts-node --project scripts/tsconfig.json scripts/id.ts",
    "lighthouse": "firebase emulators:exec \"lhci autorun\"",
    "lint": "concurrently npm:lint:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --allowed-hosts npm --validate-https",
    "lint:ng": "ng lint",
    "lint:prettier": "prettier --check \"**/*.{js,json,css,scss,less,md,ts,html,component.html}\"",
    "lint:stylelint": "stylelint \"src/**/*.scss\"",
    "prebuild": "npm run clean",
    "prebuild:scripts": "cp -n example.twitter.json .twitter.json || true; cp -n example.firebase-adminsdk.json .firebase-adminsdk.json || true",
    "serve": "npm run build && npm run start:firebase",
    "start": "ng serve --port 5000 --hmr",
    "start:firebase": "firebase emulators:start",
    "test": "TS_NODE_PROJECT=features/tsconfig.loose.json cucumber-js",
    "test:features": "start-server-and-test start:firebase http://localhost:5000 test",
    "update-tweets": "ts-node --project scripts/tsconfig.json scripts/update-tweets.ts"
  },
  "dependencies": {
    "@angular/animations": "12.1.1",
    "@angular/cdk": "12.1.1",
    "@angular/common": "12.1.1",
    "@angular/compiler": "12.1.1",
    "@angular/core": "12.1.1",
    "@angular/fire": "6.1.5",
    "@angular/forms": "12.1.1",
    "@angular/material": "12.1.1",
    "@angular/platform-browser": "12.1.1",
    "@angular/platform-browser-dynamic": "12.1.1",
    "@angular/router": "12.1.1",
    "@angular/service-worker": "12.1.1",
    "@firebase/app": "0.6.28",
    "@justinribeiro/lite-youtube": "0.9.1",
    "@webcomponents/webcomponentsjs": "2.5.0",
    "autotrack": "2.4.1",
    "clipboard-polyfill": "3.0.3",
    "firebase": "8.7.0",
    "first-input-delay": "0.1.3",
    "github-repository": "0.4.0",
    "material-components-web": "11.0.0",
    "ng-lazyload-image": "9.1.0",
    "ngx-skeleton-loader": "2.10.0",
    "node-package": "1.4.0",
    "rxjs": "6.6.7",
    "tslib": "^2.3.0",
    "twitter-status": "0.5.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/architect": "0.1201.1",
    "@angular-devkit/build-angular": "12.1.1",
    "@angular-eslint/builder": "^12.2.0",
    "@angular-eslint/eslint-plugin": "^12.2.0",
    "@angular-eslint/eslint-plugin-template": "^12.2.0",
    "@angular-eslint/schematics": "12.2.0",
    "@angular-eslint/template-parser": "^12.2.0",
    "@angular/cli": "12.1.1",
    "@angular/compiler-cli": "12.1.1",
    "@angular/language-service": "12.1.1",
    "@cucumber/cucumber": "^7.3.0",
    "@lhci/cli": "0.8.0",
    "@testing-library/dom": "^8.1.0",
    "@types/chai": "4.2.19",
    "@types/jasmine": "3.7.7",
    "@types/node": "14.17.4",
    "@types/puppeteer": "5.4.3",
    "@types/twit": "2.2.30",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "bundlesize2": "^0.0.27",
    "chai": "4.3.4",
    "concurrently": "6.2.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsdoc": "35.4.1",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-react": "latest",
    "firebase-admin": "9.10.0",
    "firebase-tools": "9.14.0",
    "jasmine": "3.8.0",
    "jasmine-core": "~3.8.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.3.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-cli": "2.0.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "^1.6.0",
    "lockfile-lint": "4.6.2",
    "pptr-testing-library": "^0.6.5",
    "prettier": "2.3.2",
    "prettier-plugin-package": "1.3.0",
    "protractor": "~7.0.0",
    "puppeteer": "10.1.0",
    "sass": "1.35.1",
    "start-server-and-test": "1.12.5",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-sass-guidelines": "8.0.0",
    "stylelint-config-standard": "22.0.0",
    "stylelint-prettier": "1.2.0",
    "stylelint-scss": "3.19.0",
    "stylelint-selector-bem-pattern": "2.1.0",
    "ts-node": "10.0.0",
    "twit": "2.2.11",
    "twitter-d": "0.4.0",
    "typescript": "4.3.5",
    "webpack-bundle-analyzer": "4.4.2"
  },
  "bundlesize": [
    {
      "path": "dist/slides-today/*main.*.js",
      "maxSize": "125 kB"
    },
    {
      "path": "dist/slides-today/*(components|default-node_modules*).*.js",
      "maxSize": "50 kB"
    },
    {
      "path": "dist/slides-today/!(main|components|default-node_modules*).*.js",
      "maxSize": "30 kB"
    }
  ]
}
