{
  "name": "slides-today",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "20",
    "npm": "10"
  },
  "scripts": {
    "analyze": "npm run build:stats && webpack-bundle-analyzer dist/slides-today/stats-es2015.json",
    "build": "ng build",
    "build:development": "npm run build -- --configuration development",
    "build:scripts": "cd scripts && tsc",
    "build:stats": "npm run build -- --stats-json",
    "bundlesize": "bundlesize --enable-github-checks",
    "clean": "rm -rf dist && rm -rf scripts/dist",
    "deploy": "ng deploy",
    "fix": "concurrently npm:fix:*",
    "fix:ng": "ng lint --fix",
    "fix:prettier": "prettier --write .",
    "get-tweet": "ts-node --project scripts/tsconfig.json scripts/get-tweet.ts",
    "id": "ts-node --project scripts/tsconfig.json scripts/id.ts",
    "lighthouse": "firebase emulators:exec \"lhci autorun\"",
    "lint": "concurrently npm:lint:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --allowed-hosts npm github.com",
    "lint:ng": "ng lint",
    "lint:prettier": "prettier --check .",
    "lint:stylelint": "stylelint \"src/**/*.scss\"",
    "ng": "ng",
    "postinstall": "npm run rebuild --prefix node_modules/pptr-testing-library",
    "prebuild": "npm run clean",
    "prebuild:scripts": "cp -n example.twitter.json .twitter.json || true; cp -n example.firebase-adminsdk.json .firebase-adminsdk.json || true",
    "serve": "npm run build && npm run start:firebase",
    "start": "ng serve --port 5000 --hmr",
    "start:firebase": "firebase emulators:start",
    "test": "TS_NODE_PROJECT=features/tsconfig.loose.json cucumber-js",
    "test:features": "start-server-and-test start:firebase http://127.0.0.1:5000/ test",
    "update-tweets": "ts-node --project scripts/tsconfig.json scripts/update-tweets.ts",
    "watch": "ng build --watch --configuration development"
  },
  "dependencies": {
    "@angular/animations": "17.2.1",
    "@angular/cdk": "17.2.0",
    "@angular/common": "17.2.1",
    "@angular/compiler": "17.2.1",
    "@angular/core": "17.2.1",
    "@angular/fire": "17.0.1",
    "@angular/forms": "17.2.1",
    "@angular/material": "17.2.0",
    "@angular/platform-browser": "17.2.1",
    "@angular/platform-browser-dynamic": "17.2.1",
    "@angular/router": "17.2.1",
    "@angular/service-worker": "17.2.1",
    "@firebase/app": "0.9.27",
    "@justinribeiro/lite-youtube": "1.5.0",
    "autotrack": "2.4.1",
    "firebase": "^10.8.0",
    "first-input-delay": "0.1.3",
    "github-repository": "0.4.0",
    "material-components-web": "14.0.0",
    "ngx-skeleton-loader": "9.0.0",
    "node-package": "1.4.0",
    "rxfire": "^6.0.5",
    "rxjs": "7.8.1",
    "tslib": "^2.6.2",
    "twitter-status": "0.7.0",
    "zone.js": "~0.14.4"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1702.0",
    "@angular-devkit/build-angular": "17.2.0",
    "@angular-eslint/builder": "17.2.1",
    "@angular-eslint/eslint-plugin": "^17.2.1",
    "@angular-eslint/eslint-plugin-template": "^17.2.1",
    "@angular-eslint/schematics": "17.2.1",
    "@angular-eslint/template-parser": "^17.2.1",
    "@angular-eslint/utils": "^17.2.1",
    "@angular/cli": "17.2.0",
    "@angular/compiler-cli": "17.2.1",
    "@angular/language-service": "17.2.1",
    "@cucumber/cucumber": "^10.3.1",
    "@lhci/cli": "0.13.0",
    "@testing-library/dom": "^9.3.4",
    "@types/chai": "4.3.6",
    "@types/jasmine": "5.1.4",
    "@types/node": "20.11.19",
    "@types/twit": "2.2.35",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.10.0",
    "bundlesize2": "^0.0.31",
    "chai": "4.3.8",
    "concurrently": "8.2.2",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsdoc": "48.1.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-react": "latest",
    "firebase-admin": "^12.0.0",
    "firebase-tools": "^13.3.0",
    "jasmine-core": "~5.1.2",
    "jsonc-parser": "^3.2.1",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "lockfile-lint": "4.13.1",
    "pptr-testing-library": "github:testing-library/pptr-testing-library#fix_pptr_17",
    "prettier": "3.2.5",
    "prettier-plugin-package": "1.4.0",
    "puppeteer": "^22.1.0",
    "sass": "1.71.0",
    "start-server-and-test": "2.0.3",
    "stylelint": "16.2.1",
    "stylelint-config-sass-guidelines": "11.0.0",
    "stylelint-config-standard": "36.0.0",
    "stylelint-prettier": "5.0.0",
    "stylelint-scss": "6.1.0",
    "stylelint-selector-bem-pattern": "3.0.1",
    "ts-node": "10.9.2",
    "twit": "2.2.11",
    "twitter-d": "0.6.0",
    "typescript": "5.3.3",
    "webpack-bundle-analyzer": "4.10.1"
  },
  "bundlesize": [
    {
      "path": "dist/slides-today/browser/*main-*.js",
      "maxSize": "250 kB"
    },
    {
      "path": "dist/slides-today/browser/chunk-*.js",
      "maxSize": "75 kB"
    },
    {
      "path": "dist/slides-today/browser/*.js",
      "maxSize": "25 kB"
    }
  ]
}
