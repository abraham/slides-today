{
  "name": "slides-today",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "16",
    "npm": "7"
  },
  "scripts": {
    "analyze": "npm run build:stats && webpack-bundle-analyzer dist/slides-today/stats-es2015.json",
    "build": "ng build",
    "build:development": "npm run build -- --configuration development",
    "build:scripts": "cd scripts && tsc",
    "build:stats": "npm run build -- --stats-json",
    "bundlesize": "bundlesize --enable-github-checks",
    "clean": "rm -rf dist && rm -rf scripts/dist",
    "deploy": "ng deploy",
    "fix": "concurrently npm:fix:*",
    "fix:ng": "ng lint --fix",
    "fix:prettier": "prettier --write .",
    "get-tweet": "ts-node --project scripts/tsconfig.json scripts/get-tweet.ts",
    "id": "ts-node --project scripts/tsconfig.json scripts/id.ts",
    "lighthouse": "firebase emulators:exec \"lhci autorun\"",
    "lint": "concurrently npm:lint:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --allowed-hosts npm --validate-https",
    "lint:ng": "ng lint",
    "lint:prettier": "prettier --check .",
    "lint:stylelint": "stylelint \"src/**/*.scss\"",
    "ng": "ng",
    "prebuild": "npm run clean",
    "prebuild:scripts": "cp -n example.twitter.json .twitter.json || true; cp -n example.firebase-adminsdk.json .firebase-adminsdk.json || true",
    "serve": "npm run build && npm run start:firebase",
    "start": "ng serve --port 5000 --hmr",
    "start:firebase": "firebase emulators:start",
    "test": "TS_NODE_PROJECT=features/tsconfig.loose.json cucumber-js",
    "test:features": "start-server-and-test start:firebase http://localhost:5000 test",
    "update-tweets": "ts-node --project scripts/tsconfig.json scripts/update-tweets.ts",
    "watch": "ng build --watch --configuration development"
  },
  "dependencies": {
    "@angular/animations": "13.3.0",
    "@angular/cdk": "13.3.0",
    "@angular/common": "13.3.0",
    "@angular/compiler": "13.3.0",
    "@angular/core": "13.3.0",
    "@angular/fire": "7.3.0",
    "@angular/forms": "13.3.0",
    "@angular/material": "13.3.0",
    "@angular/platform-browser": "13.3.0",
    "@angular/platform-browser-dynamic": "13.3.0",
    "@angular/router": "13.3.0",
    "@angular/service-worker": "13.3.0",
    "@firebase/app": "0.7.21",
    "@justinribeiro/lite-youtube": "1.3.1",
    "autotrack": "2.4.1",
    "firebase": "^9.6.10",
    "first-input-delay": "0.1.3",
    "github-repository": "0.4.0",
    "material-components-web": "13.0.0",
    "ngx-skeleton-loader": "5.0.0",
    "node-package": "1.4.0",
    "rxfire": "^6.0.3",
    "rxjs": "7.5.5",
    "tslib": "^2.3.1",
    "twitter-status": "0.7.0",
    "zone.js": "~0.11.5"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1303.2",
    "@angular-devkit/build-angular": "13.3.2",
    "@angular-eslint/builder": "13.2.0",
    "@angular-eslint/eslint-plugin": "^13.2.1",
    "@angular-eslint/eslint-plugin-template": "^13.1.0",
    "@angular-eslint/schematics": "13.2.0",
    "@angular-eslint/template-parser": "^13.2.0",
    "@angular-eslint/utils": "^13.1.0",
    "@angular/cli": "13.3.2",
    "@angular/compiler-cli": "13.3.0",
    "@angular/language-service": "13.3.2",
    "@cucumber/cucumber": "^8.0.0",
    "@lhci/cli": "0.9.0",
    "@testing-library/dom": "^8.13.0",
    "@types/chai": "4.3.1",
    "@types/jasmine": "4.0.2",
    "@types/node": "16.11.22",
    "@types/puppeteer": "5.4.5",
    "@types/twit": "2.2.30",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "bundlesize2": "^0.0.31",
    "chai": "4.3.6",
    "concurrently": "7.1.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsdoc": "39.2.2",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-react": "latest",
    "firebase-admin": "^10.0.2",
    "firebase-tools": "^10.6.0",
    "jasmine-core": "~4.1.0",
    "jsonc-parser": "^3.0.0",
    "karma": "~6.3.18",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.0.0",
    "karma-jasmine-html-reporter": "^1.7.0",
    "lockfile-lint": "4.7.4",
    "pptr-testing-library": "^0.7.0",
    "prettier": "2.6.2",
    "prettier-plugin-package": "1.3.0",
    "puppeteer": "13.5.2",
    "sass": "1.50.0",
    "start-server-and-test": "1.14.0",
    "stylelint": "14.7.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-sass-guidelines": "9.0.1",
    "stylelint-config-standard": "25.0.0",
    "stylelint-prettier": "2.0.0",
    "stylelint-scss": "4.2.0",
    "stylelint-selector-bem-pattern": "2.1.1",
    "ts-node": "10.7.0",
    "twit": "2.2.11",
    "twitter-d": "0.6.0",
    "typescript": "4.6.3",
    "webpack-bundle-analyzer": "4.5.0"
  },
  "bundlesize": [
    {
      "path": "dist/slides-today/*main.*.js",
      "maxSize": "160 kB"
    },
    {
      "path": "dist/slides-today/*(components|default-node_modules*).*.js",
      "maxSize": "50 kB"
    },
    {
      "path": "dist/slides-today/!(main|components|default-node_modules*).*.js",
      "maxSize": "35 kB"
    }
  ]
}
