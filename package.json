{
  "name": "slides-today",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "18",
    "npm": "8"
  },
  "scripts": {
    "analyze": "npm run build:stats && webpack-bundle-analyzer dist/slides-today/stats-es2015.json",
    "build": "ng build",
    "build:development": "npm run build -- --configuration development",
    "build:scripts": "cd scripts && tsc",
    "build:stats": "npm run build -- --stats-json",
    "bundlesize": "bundlesize --enable-github-checks",
    "clean": "rm -rf dist && rm -rf scripts/dist",
    "deploy": "ng deploy",
    "fix": "concurrently npm:fix:*",
    "fix:ng": "ng lint --fix",
    "fix:prettier": "prettier --write .",
    "get-tweet": "ts-node --project scripts/tsconfig.json scripts/get-tweet.ts",
    "id": "ts-node --project scripts/tsconfig.json scripts/id.ts",
    "lighthouse": "firebase emulators:exec \"lhci autorun\"",
    "lint": "concurrently npm:lint:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --allowed-hosts npm --validate-https",
    "lint:ng": "ng lint",
    "lint:prettier": "prettier --check .",
    "lint:stylelint": "stylelint \"src/**/*.scss\"",
    "ng": "ng",
    "prebuild": "npm run clean",
    "prebuild:scripts": "cp -n example.twitter.json .twitter.json || true; cp -n example.firebase-adminsdk.json .firebase-adminsdk.json || true",
    "serve": "npm run build && npm run start:firebase",
    "start": "ng serve --port 5000 --hmr",
    "start:firebase": "firebase emulators:start",
    "test": "TS_NODE_PROJECT=features/tsconfig.loose.json cucumber-js",
    "test:features": "start-server-and-test start:firebase http://127.0.0.1:5000/ test",
    "update-tweets": "ts-node --project scripts/tsconfig.json scripts/update-tweets.ts",
    "watch": "ng build --watch --configuration development"
  },
  "dependencies": {
    "@angular/animations": "15.1.2",
    "@angular/cdk": "15.1.2",
    "@angular/common": "15.1.2",
    "@angular/compiler": "15.1.2",
    "@angular/core": "15.1.2",
    "@angular/fire": "7.5.0",
    "@angular/forms": "15.1.2",
    "@angular/material": "15.1.2",
    "@angular/platform-browser": "15.1.2",
    "@angular/platform-browser-dynamic": "15.1.2",
    "@angular/router": "15.1.2",
    "@angular/service-worker": "15.1.2",
    "@firebase/app": "0.8.4",
    "@justinribeiro/lite-youtube": "1.5.0",
    "autotrack": "2.4.1",
    "firebase": "^9.14.0",
    "first-input-delay": "0.1.3",
    "github-repository": "0.4.0",
    "material-components-web": "14.0.0",
    "ngx-skeleton-loader": "7.0.0",
    "node-package": "1.4.0",
    "rxfire": "^6.0.3",
    "rxjs": "7.8.0",
    "tslib": "^2.5.0",
    "twitter-status": "0.7.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1501.3",
    "@angular-devkit/build-angular": "15.1.4",
    "@angular-eslint/builder": "15.2.0",
    "@angular-eslint/eslint-plugin": "^15.2.0",
    "@angular-eslint/eslint-plugin-template": "^15.2.0",
    "@angular-eslint/schematics": "15.2.0",
    "@angular-eslint/template-parser": "^15.2.0",
    "@angular-eslint/utils": "^15.2.0",
    "@angular/cli": "15.1.4",
    "@angular/compiler-cli": "15.1.2",
    "@angular/language-service": "15.1.3",
    "@cucumber/cucumber": "^8.10.0",
    "@lhci/cli": "0.10.0",
    "@testing-library/dom": "^8.20.0",
    "@types/chai": "4.3.4",
    "@types/jasmine": "4.3.1",
    "@types/node": "18.11.18",
    "@types/twit": "2.2.31",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.43.0",
    "bundlesize2": "^0.0.31",
    "chai": "4.3.7",
    "concurrently": "7.6.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsdoc": "39.8.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-react": "latest",
    "firebase-admin": "^11.5.0",
    "firebase-tools": "^11.22.0",
    "jasmine-core": "~4.5.0",
    "jsonc-parser": "^3.2.0",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "lockfile-lint": "4.10.0",
    "pptr-testing-library": "^0.7.0",
    "prettier": "2.8.3",
    "prettier-plugin-package": "1.3.0",
    "puppeteer": "^19.6.3",
    "sass": "1.58.0",
    "start-server-and-test": "1.15.3",
    "stylelint": "14.16.1",
    "stylelint-config-prettier": "9.0.4",
    "stylelint-config-sass-guidelines": "9.0.1",
    "stylelint-config-standard": "29.0.0",
    "stylelint-prettier": "2.0.0",
    "stylelint-scss": "4.3.0",
    "stylelint-selector-bem-pattern": "2.1.1",
    "ts-node": "10.9.1",
    "twit": "2.2.11",
    "twitter-d": "0.6.0",
    "typescript": "4.9.5",
    "webpack-bundle-analyzer": "4.7.0"
  },
  "bundlesize": [
    {
      "path": "dist/slides-today/*main.*.js",
      "maxSize": "160 kB"
    },
    {
      "path": "dist/slides-today/*(components|default-node_modules*).*.js",
      "maxSize": "50 kB"
    },
    {
      "path": "dist/slides-today/!(main|components|default-node_modules*).*.js",
      "maxSize": "50 kB"
    }
  ]
}
