{
  "name": "slides-today",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "22",
    "npm": "10"
  },
  "scripts": {
    "build": "ng build",
    "build:development": "npm run build -- --configuration development",
    "build:scripts": "cd scripts && tsc",
    "build:stats": "npm run build -- --stats-json",
    "bundlesize": "bundlesize --enable-github-checks",
    "clean": "rm -rf dist && rm -rf scripts/dist",
    "deploy": "ng deploy",
    "fix": "concurrently npm:fix:*",
    "fix:ng": "ng lint --fix",
    "fix:prettier": "prettier --write .",
    "get-tweet": "ts-node --project scripts/tsconfig.json scripts/get-tweet.ts",
    "id": "ts-node --project scripts/tsconfig.json scripts/id.ts",
    "lighthouse": "firebase emulators:exec \"lhci autorun\"",
    "lint": "concurrently npm:lint:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --allowed-hosts npm github.com",
    "lint:ng": "ng lint",
    "lint:prettier": "prettier --check .",
    "lint:stylelint": "stylelint \"src/**/*.scss\"",
    "ng": "ng",
    "prebuild": "npm run clean",
    "prebuild:scripts": "cp -n example.twitter.json .twitter.json || true; cp -n example.firebase-adminsdk.json .firebase-adminsdk.json || true",
    "serve": "npm run build && npm run start:firebase",
    "start": "ng serve --port 5000 --hmr",
    "start:firebase": "firebase emulators:start",
    "test": "NODE_OPTIONS='--loader ts-node/esm' TS_NODE_PROJECT=features/tsconfig.loose.json cucumber-js",
    "test:features": "start-server-and-test start:firebase http://127.0.0.1:5000/ test",
    "update-tweets": "ts-node --project scripts/tsconfig.json scripts/update-tweets.ts",
    "watch": "ng build --watch --configuration development"
  },
  "dependencies": {
    "@angular/animations": "19.2.6",
    "@angular/cdk": "19.2.9",
    "@angular/common": "19.2.6",
    "@angular/compiler": "19.2.6",
    "@angular/core": "19.2.6",
    "@angular/fire": "19.1.0",
    "@angular/forms": "19.2.6",
    "@angular/material": "19.2.9",
    "@angular/platform-browser": "19.2.6",
    "@angular/platform-browser-dynamic": "19.2.6",
    "@angular/router": "19.2.6",
    "@angular/service-worker": "19.2.6",
    "@firebase/app": "0.11.2",
    "@justinribeiro/lite-youtube": "1.7.1",
    "autotrack": "2.4.1",
    "firebase": "^11.4.0",
    "first-input-delay": "0.1.3",
    "github-repository": "0.4.0",
    "material-components-web": "14.0.0",
    "ngx-skeleton-loader": "9.0.0",
    "node-package": "1.4.0",
    "rxfire": "^6.0.5",
    "rxjs": "7.8.2",
    "tslib": "^2.6.2",
    "twitter-status": "0.7.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1902.7",
    "@angular-devkit/build-angular": "19.2.7",
    "@angular-eslint/builder": "19.3.0",
    "@angular-eslint/eslint-plugin": "^19.3.0",
    "@angular-eslint/eslint-plugin-template": "^19.3.0",
    "@angular-eslint/schematics": "19.3.0",
    "@angular-eslint/template-parser": "^19.3.0",
    "@angular-eslint/utils": "^19.3.0",
    "@angular/cli": "19.2.7",
    "@angular/compiler-cli": "19.2.6",
    "@angular/language-service": "19.2.6",
    "@cucumber/cucumber": "^11.2.0",
    "@lhci/cli": "0.14.0",
    "@testing-library/dom": "^10.4.0",
    "@types/chai": "5.2.0",
    "@types/jasmine": "5.1.7",
    "@types/node": "22.13.10",
    "@types/twit": "2.2.35",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "bundlesize2": "^0.0.34",
    "chai": "5.2.0",
    "concurrently": "9.1.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsdoc": "48.2.2",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-react": "latest",
    "firebase-admin": "^12.0.0",
    "firebase-tools": "^13.6.0",
    "jasmine-core": "~5.6.0",
    "jsonc-parser": "^3.2.1",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "lockfile-lint": "4.14.0",
    "pptr-testing-library": "0.8.0",
    "prettier": "3.5.3",
    "prettier-plugin-package": "1.4.0",
    "puppeteer": "^22.15.0",
    "sass": "1.85.1",
    "start-server-and-test": "2.0.3",
    "stylelint": "16.15.0",
    "stylelint-config-sass-guidelines": "12.1.0",
    "stylelint-config-standard": "37.0.0",
    "stylelint-prettier": "5.0.3",
    "stylelint-scss": "6.11.1",
    "stylelint-selector-bem-pattern": "4.0.1",
    "ts-node": "10.9.2",
    "twit": "2.2.11",
    "twitter-d": "0.6.0",
    "typescript": "5.8.2"
  },
  "bundlesize": [
    {
      "path": "dist/slides-today/browser/*main-*.js",
      "maxSize": "250 kB"
    },
    {
      "path": "dist/slides-today/browser/chunk-*.js",
      "maxSize": "75 kB"
    },
    {
      "path": "dist/slides-today/browser/*.js",
      "maxSize": "25 kB"
    }
  ]
}
